<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration"
    >

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="40dp"
        android:width="100dp"
        android:hint="name"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="Name"
        android:textColorLink="@android:color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="33dp"
        android:ems="10"
        android:hint="name"
        android:inputType="textPersonName"

        android:textSize="22dp" />
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="100dp"
        android:width="100dp"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="Mail Id"
        android:textColorLink="@android:color/black"
        android:textSize="20dp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="33dp"
        android:ems="10"
        android:hint="mail_id"
        android:inputType="textPersonName"

        android:textSize="22dp" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="160dp"
        android:width="100dp"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="Contact No."
        android:textColorLink="@android:color/black"
        android:textSize="18dp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/editText3"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="33dp"
        android:ems="10"
        android:hint="contact_no"
        android:inputType="textPersonName"

        android:textSize="22dp" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tv1"
        android:layout_marginTop="218dp"
        android:text="@string/password"
        android:textColor="#000000"
        android:textSize="20dp" />
    />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv4"
        android:layout_alignStart="@+id/editText1"
        android:ems="10"
        android:hint="password"
        android:inputType="textPersonName"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv1"
        android:layout_centerVertical="true"
        android:text="Confirm password"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/editText5"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText1"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="password"
        android:inputType="textPersonName"
        android:textSize="22dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="179dp"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="176dp"
        android:text="Create Account"
        android:onClick="signinconn"
        />

</RelativeLayout>